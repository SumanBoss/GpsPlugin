<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
           id="org.apache.cordova.plugin"
      version="0.2.0">
    <name>GPS</name>
    <description>Cordova GPS Plugin</description>
    <license>MIT</license>
    <keywords>phonegap,GPS,Cordova</keywords>

 <engines>
      <engine name="cordova" version=">=3.0.0" />
   </engines>
    <js-module src="www/Gpsplugin.js" name="gpsmanage">
        <clobbers target="gps" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="gps">
                <param name="android-package" value="org.apache.cordova.plugin.GPSTracker"/>
            </feature>
        </config-file>
        <source-file src="src/android/GPSTracker.java" target-dir="src/org/apache/cordova/plugin" />      
     </platform>          
</plugin>
